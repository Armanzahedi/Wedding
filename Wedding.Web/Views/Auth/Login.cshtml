@model LoginViewModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<p>برای ورود به پنل اطلاعات خود را وارد کنید.</p>
<form method="post" id="form" class="form">
    <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-4">
        <input type="text" class="form-control form-control-lg" asp-for="Username" autocomplete="off" autofocus placeholder="ایمیل یا نام کاربری">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input type="password" class="form-control form-control-lg" asp-for="Password" autocomplete="off" placeholder="رمز عبور">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="RememberMe" class="custom-control-input">
            <label class="custom-control-label" for="RememberMe">مرا به خاطر بسپار</label>
        </div>
        <a asp-action="ForgotPassword" id="kt_login_forgot" class="text-muted text-hover-primary">رمز عبور خود را فراموش کرده اید؟</a>
    </div>
    <input class="btn btn-primary btn-lg btn-block btn-uppercase mb-4" type="submit" value="ورود" />
        <a asp-action="SmsLogin" class="text-primary text-hover-primary">ورود با شماره تلفن</a>
</form>
