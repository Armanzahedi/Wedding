@model List<Wedding.Core.Models.AdGallery>
<h5 class="card-title d-flex justify-content-between align-items-center m-b-50">
    گالری تصاویر
    <span>
        <a onclick="openModal('/Apanel/Ads/CreateGallery/@(ViewBag.Id)')" class="btn btn-sm primary-font text-success" style="cursor: pointer">
            <i class="ti-plus m-l-5"></i> افزودن تصویر
        </a>
    </span>

</h5>
<div class="gallery-grid">
    @foreach (var item in Model)
    {
        <a class="item" onclick="openModal('/Apanel/Ads/EditGallery/@(item.Id)')" style="background: darkred">
            <img src="/UploadedFiles/Images/@(item.Image ?? "no-photo.png")"/>
            @{
                switch (item.Status)
                {
                    case ApprovalStatus.Review:
                        <span class="status">در حال بررسی</span>
                        break;
                    case ApprovalStatus.Approved:
                        //<span class="status">تأیید شده</span>
                        break;
                    case ApprovalStatus.Rejected:
                        <span class="status">رد شده</span>
                        break;
                    default:
                        <span class="status">در انتضار بررسی</span>
                        break;
                }
            }
        </a>
    }
</div>